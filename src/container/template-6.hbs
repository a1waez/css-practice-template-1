<header class="header row g-0">
    <div class="col-3">
        {{> logo}}
    </div>

    <nav class="header_nav col-9">
        <div class="header_nav_right">
            {{> nav list=header}}
        </div>
    </nav>

</header>

<main class="main">
    {{#with info}}
    <div class="info">
        <strong class="info_title">{{title}}</strong>
        <p class="info_description">{{description}}</p>
    </div>
    {{/with}}

    {{#with form}}
    <form class="form">
        <div class="form_input_list">
            {{#each inputs}}
            <input type="{{type}}" placeholder="{{placeholder}}" class="form_input" name="{{name}}"
                id="form-input-{{id}}">
            {{/each}}
        </div>

        <div class="form_checkbox">
            <input type="checkbox" name="{{checkbox.name}}" id="{{checkbox.name}}">
            <div></div>
            <label for="{{checkbox.name}}">{{checkbox.label}}</label>
        </div>

        <button type="submit" class="form_button">{{button}}</button>
        <p class="form_info">{{info}}</p>
    </form>
    {{/with}}
</main>

<div class="updates">
    {{#with updates}}
    <h1 class="updates_title">{{title}}</h1>

    {{#each list}}
    <div class="list">
        <div class="block"></div>
        <div>
            <strong class="list_name">{{nickname}}</strong>
            <p class="list_text">{{description}}</p>
        </div>
    </div>
    {{/each}}
    {{#with show_all}}
    <a href="{{url}}" class="messages_link">{{text}}</a>
    {{/with}}
</div>
{{/with}}

<div class="expirience">
    {{#with expirience}}
    <strong class="expirience_title">{{title}}</strong>
    <badge class="expirience_badge">{{badge}}</badge>


    <div class="exp">
        {{#each list}}
        <div class="list_form">
            <strong class="list_form_name">{{name}}</strong>
            <p class="list_form_details">{{details}}</p>
        </div>
        {{/each}}
    </div>
    {{/with}}
</div>

<footer class="footer">
    <div>
        {{> logo}}
        <span class="footer_copyright">Copyright 2023-2024</span>
    </div>

    {{#each footer}}
    <div>
        <span class="footer_title">{{title}}</span>
        {{> nav list=links isVertical=true}}
    </div>
    {{/each}}
</footer>